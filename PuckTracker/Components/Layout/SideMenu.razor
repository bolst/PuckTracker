    <BarBrand Height="Height.Px(84)">
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/newgame">
                    <BarIcon IconName="IconName.Add" />
                    New Game
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/gamesheet">
                    <BarIcon IconName="IconName.Dashboard" />
                    Scoresheet
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/rosters">
                    <BarIcon IconName="IconName.UserFriends" />
                    Rosters
                </BarLink>
            </BarItem>
        </BarStart>
        @* <BarEnd>
        <BarItem>
